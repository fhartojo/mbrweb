<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd
">
	<id>prod</id>
	<formats>
		<format>war</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target/${project.artifactId}-${project.version}</directory>
			<outputDirectory></outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/logging</directory>
			<outputDirectory>WEB-INF</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/properties</directory>
			<outputDirectory>WEB-INF/properties</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/messages</directory>
			<outputDirectory>WEB-INF/messages</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/context/prod</directory>
			<outputDirectory>META-INF</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>

